{
    "display_information": {
        "name": "FAQBotForMLOps",
        "description": "MLOps FAQ as a bot",
        "background_color": "#2e7898"
    },
    "features": {
        "bot_user": {
            "display_name": "QABotForMLOps",
            "always_online": false
        }
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "app_mentions:read",
                "channels:history",
                "channels:read",
                "chat:write"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "app_mention"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}